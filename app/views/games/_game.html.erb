<div class="homepage-panel panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">
      <%= link_to game.name, game_path(game) %>
      <% if logged_in? %>
      <a href="#">
        <span class="partial-icons glyphicon glyphicon-arrow-up"></span>
      </a>
      <a href="#">
        <span class="partial-icons glyphicon glyphicon-arrow-down"></span>
      </a>
      <a href="#">
        <span class="partial-icons glyphicon glyphicon-plus"></span>
      </a>
      <a href="#">
        <span class="partial-icons glyphicon glyphicon-pencil"></span>
      </a>
      <a href="#">
        <span class="partial-icons glyphicon glyphicon-check"></span>
      </a>
      <% end %>
    </h3>
  </div>
  <div class="panel-body">
    <%= game.description.truncate(100) %>
    <center>
      <img src="<%= game.picture %>" class="img-rounded game-page" width="100">
    </center>
  </div>
</div>
